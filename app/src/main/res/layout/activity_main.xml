<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".MainActivity">
    <TextView
            android:text="Rodrigo Leutz Calc      "
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tvConta"
            android:textSize="35sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvResult"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="0"
            android:gravity="end"
            android:layout_width="match_parent"
            android:textSize="55sp"
            android:layout_height="80dp"
            android:textColor="@android:color/darker_gray"
            tools:layout_editor_absoluteX="160dp" android:id="@+id/tvResult"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tableLayout"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="0dp"
            android:id="@+id/tableLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="AC"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buAc" android:textSize="30sp"
                    android:background="@color/cinza" android:textColor="@color/branco"/>
            <Button
                    android:text="/"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buDiv" android:textSize="30sp"
                    android:background="@color/cinza" android:textColor="@color/branco"/>
            <Button
                    android:text="*"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buMul" android:textSize="30sp"
                    android:background="@color/cinza" android:textColor="@color/branco"/>
            <Button
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buDel" android:textSize="30sp"
                    android:background="@color/cinza" android:textColor="@color/branco" android:text="Del"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="7"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu7" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="8"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu8" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="9"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu9" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="-"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buSub" android:textSize="30sp"
                    android:background="@color/cinza" android:textColor="@color/branco"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="4"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu4" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="5"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu5" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="6"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu6" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="+"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buSum" android:textSize="30sp"
                    android:background="@color/cinza" android:textColor="@color/branco"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="1"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu1" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="2"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu2" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="3"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu3" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="%"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buPer" android:textSize="30sp"
                    android:background="@color/cinza" android:textColor="@color/branco"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <Button
                    android:text="0"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu0" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="."
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buDot" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="+/-"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buPlusMiss" android:textSize="30sp"
                    android:background="@color/numeros" android:textColor="@color/branco"/>
            <Button
                    android:text="="
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/buEq" android:textSize="30sp"
                    android:background="@color/igual" android:textColor="@color/branco"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>